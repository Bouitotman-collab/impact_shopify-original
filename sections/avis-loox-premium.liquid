/* ===== TRANSFORMATION SECTION AVIS - BLOC BLEU À GAUCHE ===== */
/* Ajoutez ce CSS dans votre section "Avis clients premium" */

/* RÉINITIALISER LE LAYOUT */
.reviews-premium {
  padding: 60px 0 !important;
  background: #ffffff !important;
}

.reviews-container {
  display: grid !important;
  grid-template-columns: 1fr !important;
  gap: 30px !important;
  max-width: 1400px !important;
  margin: 0 auto !important;
  padding: 0 20px !important;
  grid-template-areas: 
    "title"
    "summary"
    "cta"
    "reviews" !important;
}

/* LAYOUT CÔTE À CÔTE SUR DESKTOP */
@media (min-width: 768px) {
  .reviews-container {
    grid-template-columns: 400px 1fr !important;
    gap: 40px !important;
    grid-template-areas: 
      "title title"
      "summary reviews"
      "cta reviews" !important;
  }
}

/* TITRE - CACHER OU REPOSITIONNER */
.reviews-title {
  grid-area: title !important;
  display: none !important; /* On le cache car on va le mettre dans le bloc bleu */
}

/* BLOC BLEU - RÉSUMÉ + CTA */
.rating-summary {
  grid-area: summary !important;
  background-color: #000C7D !important;
  border-radius: 12px !important;
  padding: 60px 40px !important;
  display: flex !important;
  flex-direction: column !important;
  justify-content: center !important;
  align-items: center !important;
  text-align: center !important;
  min-height: 400px !important;
}

/* CTA DANS LE BLOC BLEU */
.write-review-btn {
  grid-area: cta !important;
  background-color: transparent !important;
  color: #FFFFFF !important;
  border: 2px solid #FFFFFF !important;
  padding: 14px 30px !important;
  border-radius: 8px !important;
  text-decoration: none !important;
  font-family: 'Barlow', sans-serif !important;
  font-weight: 400 !important;
  margin: 0 !important;
  width: auto !important;
  display: inline-block !important;
}

.write-review-btn:hover {
  background-color: #FFFFFF !important;
  color: #000C7D !important;
}

/* POSITIONNER LE CTA DANS LE BLOC BLEU */
@media (min-width: 768px) {
  .rating-summary {
    position: relative !important;
  }
  
  .write-review-btn {
    position: absolute !important;
    bottom: 40px !important;
    left: 50% !important;
    transform: translateX(-50%) !important;
  }
}

/* AJOUTER "EXCELLENT" AU DÉBUT */
.rating-toggle::before {
  content: "Excellent" !important;
  display: block !important;
  font-family: 'Barlow', sans-serif !important;
  font-weight: 700 !important;
  font-size: 48px !important;
  color: #FFFFFF !important;
  margin-bottom: 15px !important;
}

/* BOUTON TOGGLE - STYLE BLANC */
.rating-toggle {
  background: none !important;
  border: none !important;
  cursor: pointer !important;
  display: flex !important;
  flex-direction: column !important;
  align-items: center !important;
  gap: 10px !important;
}

/* ÉTOILES EN BLANC */
.rating-toggle .stars {
  color: #FFFFFF !important;
  font-size: 32px !important;
  letter-spacing: 5px !important;
}

/* TEXTE COMPTEUR EN BLANC */
.rating-toggle .count {
  font-family: 'Barlow', sans-serif !important;
  font-size: 24px !important;
  font-weight: 800 !important;
  color: #FFFFFF !important;
}

/* AJOUTER LA NOTE MOYENNE */
.rating-toggle::after {
  content: "4.6 sur 5 basés sur" !important;
  display: block !important;
  font-family: 'Barlow', sans-serif !important;
  font-size: 42px !important;
  font-weight: 700 !important;
  color: #FFFFFF !important;
  margin-top: 20px !important;
  margin-bottom: -10px !important;
}

/* CHEVRON EN BLANC */
.rating-toggle .chevron {
  color: #FFFFFF !important;
  font-size: 16px !important;
}

/* DROPDOWN - GARDER EN BLANC */
.rating-dropdown {
  background: rgba(255, 255, 255, 0.1) !important;
  backdrop-filter: blur(10px) !important;
  border-radius: 14px !important;
  padding: 20px !important;
  margin-top: 20px !important;
}

.average-score {
  color: #FFFFFF !important;
}

.review-context {
  color: #FFFFFF !important;
}

.rating-row .label {
  color: #FFFFFF !important;
}

.rating-row .number {
  color: #FFFFFF !important;
}

/* CARROUSEL D'AVIS À DROITE */
.reviews-list {
  grid-area: reviews !important;
  display: flex !important;
  gap: 20px !important;
  overflow-x: auto !important;
  scroll-behavior: smooth !important;
  scrollbar-width: none !important;
  -ms-overflow-style: none !important;
  padding: 10px 0 !important;
  position: relative !important;
}

.reviews-list::-webkit-scrollbar {
  display: none !important;
}

/* CARTES D'AVIS */
.review-item {
  min-width: 350px !important;
  max-width: 350px !important;
  background: #F5F5F5 !important;
  border-radius: 12px !important;
  padding: 30px !important;
  border: none !important;
  display: flex !important;
  flex-direction: column !important;
  gap: 15px !important;
}

.review-stars {
  color: #FFD700 !important;
  font-size: 18px !important;
  margin-bottom: 10px !important;
}

.review-text {
  font-family: 'Barlow', sans-serif !important;
  font-size: 15px !important;
  line-height: 1.6 !important;
  color: #333333 !important;
  margin: 0 !important;
}

.review-footer {
  display: flex !important;
  align-items: center !important;
  gap: 10px !important;
  margin-top: auto !important;
}

.review-footer strong {
  font-family: 'Barlow', sans-serif !important;
  font-weight: 600 !important;
  font-size: 14px !important;
  color: #000000 !important;
}

.verified {
  font-size: 13px !important;
  color: #00A651 !important;
}

/* RESPONSIVE MOBILE */
@media (max-width: 767px) {
  .rating-toggle::before {
    font-size: 36px !important;
  }
  
  .rating-toggle::after {
    font-size: 28px !important;
  }
  
  .review-item {
    min-width: 300px !important;
    max-width: 300px !important;
  }
  
  .rating-summary {
    padding: 40px 30px !important;
    min-height: auto !important;
  }
}