{% comment %}
SECTION : Avis clients premium – SANS CARRÉ BLEU + TITRE INCLUSIF
{% endcomment %}

<div class="reviews-premium-simple" id="avis-clients" data-reviews-section>
  <div class="reviews-container-simple">

    <!-- TITRE INCLUSIF -->
    <h4 class="reviews-main-title">
      {{ section.settings.main_title }}
    </h4>

    <!-- LISTE DES AVIS -->
    <div class="reviews-list-simple">
      {% for block in section.blocks %}
        <div class="review-item-simple" {{ block.shopify_attributes }}>

          <!-- HEADER AVEC PHOTO CARRÉE + ÉTOILES -->
          <div class="review-top">
            <!-- Photo carrée -->
            {% if block.settings.review_image %}
              <img 
                src="{{ block.settings.review_image | img_url: '80x80', crop: 'center' }}" 
                alt="{{ block.settings.customer_name }}"
                class="review-avatar"
              >
            {% else %}
              <div class="review-avatar-placeholder"></div>
            {% endif %}

            <!-- Étoiles + Badge vérifié -->
            <div class="review-rating-block">
              <div class="review-stars-simple">
                {% for i in (1..5) %}
                  ★
                {% endfor %}
              </div>
              {% if block.settings.verified %}
                <span class="verified-badge-simple">Avis vérifié</span>
              {% endif %}
            </div>
          </div>

          <!-- NOM DU CLIENT -->
          <strong class="review-name">{{ block.settings.customer_name }}</strong>

          <!-- TEXTE DE L'AVIS -->
          <p class="review-text-simple">
            {{ block.settings.review_text }}
          </p>

        </div>
      {% endfor %}
    </div>

  </div>
</div>

<style>
/* ===== CSS DE BASE ===== */
.reviews-premium-simple {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  margin: 0;
  background: #fff;
}

.reviews-container-simple {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40px;
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 20px;
}

/* ===== TITRE PRINCIPAL ===== */
.reviews-main-title {
  font-family: Barlow, sans-serif;
  font-weight: 700;
  text-transform: uppercase;
  text-align: center;
  letter-spacing: 1.3px;
  line-height: 1.3;
  color: #000000;
  margin: 0;
  font-size: var(--text-h4);
  width: 100%;
}

/* ===== LISTE DES AVIS ===== */
.reviews-list-simple {
  display: flex;
  gap: 20px;
  width: 100%;
  overflow-x: auto;
  padding-bottom: 20px;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.reviews-list-simple::-webkit-scrollbar {
  display: none;
}

@media (min-width: 768px) {
  .reviews-list-simple {
    justify-content: flex-start;
    flex-wrap: nowrap;
    overflow-x: auto;
  }
}

/* ===== CARTE D'AVIS ===== */
.review-item-simple {
  min-width: 340px;
  max-width: 340px;
  background: #FFFFFF;
  border: 1px solid #E5E5E5;
  border-radius: 0;
  padding: 25px;
  display: flex;
  flex-direction: column;
  gap: 15px;
  flex-shrink: 0;
}

/* ===== HEADER AVEC PHOTO + ÉTOILES ===== */
.review-top {
  display: flex;
  align-items: flex-start;
  gap: 12px;
}

/* Photo carrée (pas ronde !) */
.review-avatar {
  width: 60px;
  height: 60px;
  object-fit: cover;
  flex-shrink: 0;
  border-radius: 0; /* CARRÉ, pas rond */
}

.review-avatar-placeholder {
  width: 60px;
  height: 60px;
  background: #E5E5E5;
  flex-shrink: 0;
  border-radius: 0;
}

/* Bloc étoiles + badge vérifié */
.review-rating-block {
  display: flex;
  flex-direction: column;
  gap: 6px;
  flex: 1;
}

.review-stars-simple {
  color: #00C853;
  font-size: 16px;
  letter-spacing: 2px;
  line-height: 1;
}

.verified-badge-simple {
  font-family: 'Barlow', sans-serif;
  font-size: 13px;
  color: #666666;
  font-weight: 400;
}

/* ===== NOM DU CLIENT ===== */
.review-name {
  font-family: 'Barlow', sans-serif;
  font-weight: 700;
  font-size: 16px;
  color: #000000;
  margin: 0;
  display: block;
}

/* ===== TEXTE DE L'AVIS ===== */
.review-text-simple {
  font-family: 'Barlow', sans-serif;
  font-size: 14px;
  line-height: 1.6;
  color: #333333;
  margin: 0;
  flex: 1;
}

/* ===== RESPONSIVE ===== */
@media (max-width: 767px) {
  .reviews-premium-simple {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .reviews-container-simple {
    gap: 30px;
    padding: 0 15px;
  }

  .review-item-simple {
    min-width: 300px;
    max-width: 300px;
    padding: 20px;
  }
}
</style>

{% schema %}
{
  "name": "Avis clients (Simple)",
  "settings": [
    {
      "type": "text",
      "id": "main_title",
      "label": "Titre de la section",
      "default": "Testé et approuvé par nos clients"
    },
    {
      "type": "header",
      "content": "Espacement"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Padding Haut",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Padding Bas",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Avis",
      "settings": [
        {
          "type": "text",
          "id": "customer_name",
          "label": "Nom"
        },
        {
          "type": "checkbox",
          "id": "verified",
          "label": "Achat vérifié",
          "default": true
        },
        {
          "type": "range",
          "id": "rating",
          "label": "Note",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        },
        {
          "type": "textarea",
          "id": "review_text",
          "label": "Avis"
        },
        {
          "type": "image_picker",
          "id": "review_image",
          "label": "Photo de l'avis"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Avis clients (Simple)"
    }
  ]
}
{% endschema %}
