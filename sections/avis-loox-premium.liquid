{% comment %}
SECTION : Avis clients premium – SANS CARRÉ BLEU + TITRE INCLUSIF
{% endcomment %}

<div class="reviews-premium-simple" id="avis-clients" data-reviews-section>
  <div class="reviews-container-simple">

    <!-- TITRE INCLUSIF -->
    <h3 class="reviews-main-title">
      {{ section.settings.main_title }}
    </h3>

    <!-- LISTE DES AVIS -->
    <div class="reviews-list-simple">
      {% for block in section.blocks %}
        <div class="review-item-simple" {{ block.shopify_attributes }}>

          <div class="review-header-simple">
            <div class="review-stars-simple">
              {% for i in (1..5) %}
                {% if i <= block.settings.rating %}★{% else %}☆{% endif %}
              {% endfor %}
            </div>
            {% if block.settings.verified %}
              <span class="verified-badge-simple">✔</span>
            {% endif %}
          </div>

          <p class="review-text-simple">
            {{ block.settings.review_text }}
          </p>

          {% if block.settings.review_image %}
            <div class="review-photo-container-simple">
              <img 
                src="{{ block.settings.review_image | img_url: '300x300', crop: 'center' }}" 
                alt="Photo avis client" 
                loading="lazy"
                class="review-photo-simple"
              >
            </div>
          {% endif %}

          <div class="review-footer-simple">
            <strong>{{ block.settings.customer_name }}</strong>
            {% if block.settings.verified %}
              <span class="verified-text-simple">Achat vérifié</span>
            {% endif %}
          </div>

        </div>
      {% endfor %}
    </div>

  </div>
</div>

<style>
/* ===== CSS DE BASE ===== */
.reviews-premium-simple {
  padding: 40px 0;
  margin: 0;
  background: #fff;
}

.reviews-container-simple {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40px;
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 20px;
}

/* ===== TITRE PRINCIPAL ===== */
.reviews-main-title {
  font-family: 'Barlow', sans-serif;
  font-weight: 700;
  font-size: 28px;
  color: #000000;
  text-align: center;
  margin: 0;
  line-height: 1.3;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

@media (min-width: 768px) {
  .reviews-main-title {
    font-size: 38px;
  }
}

/* ===== LISTE DES AVIS ===== */
.reviews-list-simple {
  display: flex;
  gap: 20px;
  width: 100%;
  overflow-x: auto;
  padding-bottom: 20px;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.reviews-list-simple::-webkit-scrollbar {
  display: none;
}

@media (min-width: 768px) {
  .reviews-list-simple {
    justify-content: center;
    flex-wrap: wrap;
    overflow-x: visible;
    padding-bottom: 0;
  }
}

@media (max-width: 767px) {
  .reviews-list-simple {
    justify-content: flex-start;
    padding-left: 10px;
  }
}

/* ===== CARTE D'AVIS ===== */
.review-item-simple {
  min-width: 300px;
  max-width: 300px;
  background: #F5F5F5;
  border-radius: 0;
  padding: 25px;
  display: flex;
  flex-direction: column;
  gap: 12px;
  flex-shrink: 0;
}

.review-header-simple {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.review-stars-simple {
  color: #FFD700;
  font-size: 18px;
}

.verified-badge-simple {
  color: #00A651;
  font-size: 14px;
}

.review-text-simple {
  font-family: 'Barlow', sans-serif;
  font-size: 15px;
  line-height: 1.5;
  color: #333333;
  margin: 0;
  flex: 1;
}

/* ===== PHOTO CARRÉE ===== */
.review-photo-container-simple {
  width: 150px;
  aspect-ratio: 1 / 1;
  overflow: hidden;
  border-radius: 0px;
  margin-top: 10px;
  margin-bottom: 10px;
  background: #e0e0e0;
}

.review-photo-simple {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* ===== FOOTER D'AVIS ===== */
.review-footer-simple {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-top: auto;
  padding-top: 10px;
  border-top: 1px solid rgba(0, 0, 0, 0.05);
}

.review-footer-simple strong {
  font-family: 'Barlow', sans-serif;
  font-weight: 600;
  font-size: 14px;
  color: #000000;
}

.verified-text-simple {
  font-size: 12px;
  color: #00A651;
  display: flex;
  align-items: center;
  gap: 4px;
}

.verified-text-simple::before {
  content: "✔";
}

/* ===== RESPONSIVE ===== */
@media (max-width: 768px) {
  .reviews-premium-simple {
    padding: 30px 0;
  }

  .reviews-container-simple {
    gap: 30px;
  }
}
</style>

{% schema %}
{
  "name": "Avis clients (Simple)",
  "settings": [
    {
      "type": "text",
      "id": "main_title",
      "label": "Titre de la section",
      "default": "Testé par des propriétaires d'animaux comme vous"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Avis",
      "settings": [
        {
          "type": "text",
          "id": "customer_name",
          "label": "Nom"
        },
        {
          "type": "checkbox",
          "id": "verified",
          "label": "Achat vérifié",
          "default": true
        },
        {
          "type": "range",
          "id": "rating",
          "label": "Note",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        },
        {
          "type": "textarea",
          "id": "review_text",
          "label": "Avis"
        },
        {
          "type": "image_picker",
          "id": "review_image",
          "label": "Photo de l'avis"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Avis clients (Simple)"
    }
  ]
}
{% endschema %}
