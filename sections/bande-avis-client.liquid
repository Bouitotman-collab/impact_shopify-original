<style>
.trustpilot-banner {
  background: #305AD0;
  padding: 12px 20px;
  text-align: center;
  color: #FFFFFF;
  font-family: 'Epilogue', sans-serif;
  font-size: 14px;
  font-weight: 500;
  border-radius: 0;
  margin: 20px 0;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.trustpilot-banner__content {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  gap: 15px;
}

.trustpilot-banner__text {
  display: flex;
  align-items: center;
  gap: 8px;
}

.trustpilot-banner__number {
  font-weight: 700;
  font-size: 16px;
}

.trustpilot-banner__separator {
  font-size: 12px;
  font-weight: 700;
  margin: 0 8px;
}

.trustpilot-banner__stars {
  display: flex;
  gap: 2px;
}

.trustpilot-banner__rating {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 14px;
}

.trustpilot-banner__excellent {
  font-weight: 700;
  color: #FFFFFF;
}

.trustpilot-banner__avis-number {
  font-weight: 400;
}

@media screen and (max-width: 989px) {
  .trustpilot-banner {
    font-size: 12px;
    padding: 10px 15px;
  }
  
  .trustpilot-banner__number {
    font-size: 14px;
  }
  
  .trustpilot-banner__content {
    gap: 10px;
  }
  
  .trustpilot-banner__text,
  .trustpilot-banner__separator {
    display: none;
  }
}
</style>

