<style>
.trustpilot-banner {
  background: {{ section.settings.background_color }};
  padding: {{ section.settings.padding_top }}px 20px {{ section.settings.padding_bottom }}px;
  text-align: center;
  color: {{ section.settings.text_color }};
  
  font-size: {{ section.settings.font_size }}px;
  font-weight: 500;
  border-radius: 0;
  margin: {{ section.settings.margin_top }}px 0 {{ section.settings.margin_bottom }}px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.trustpilot-banner__content {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  gap: 15px;
}

.trustpilot-banner__text {
  display: flex;
  align-items: center;
  gap: 8px;
}

.trustpilot-banner__number {
  font-weight: 700;
  font-size: {{ section.settings.font_size | plus: 2 }}px;
}

.trustpilot-banner__separator {
  font-size: 12px;
  font-weight: 700;
  margin: 0 8px;
}

.trustpilot-banner__stars {
  display: flex;
  gap: 2px;
}

.trustpilot-banner__stars svg {
  width: {{ section.settings.star_size }}px;
  height: {{ section.settings.star_size }}px;
  fill: {{ section.settings.star_color }};
}

.trustpilot-banner__rating {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: {{ section.settings.font_size }}px;
}

.trustpilot-banner__excellent {
  font-weight: 700;
  color: {{ section.settings.text_color }};
}

.trustpilot-banner__avis-number {
  font-weight: 400;
}

@media screen and (max-width: 989px) {
  .trustpilot-banner {
    font-size: {{ section.settings.font_size_mobile }}px;
    padding: {{ section.settings.padding_top_mobile }}px 15px {{ section.settings.padding_bottom_mobile }}px;
    margin: {{ section.settings.margin_top_mobile }}px 0 {{ section.settings.margin_bottom_mobile }}px;
  }
  
  .trustpilot-banner__number {
    font-size: {{ section.settings.font_size_mobile | plus: 2 }}px;
  }
  
  .trustpilot-banner__content {
    gap: 10px;
  }
  
  .trustpilot-banner__stars svg {
    width: {{ section.settings.star_size_mobile }}px;
    height: {{ section.settings.star_size_mobile }}px;
  }
  
  .trustpilot-banner__text,
  .trustpilot-banner__separator {
    display: none;
  }
}
</style>

<div class="trustpilot-banner">
  <div class="trustpilot-banner__content">
    {% if section.settings.show_satisfied_text %}
    <div class="trustpilot-banner__text">
      <span>{{ section.settings.satisfied_prefix }}</span>
      <span class="trustpilot-banner__number">{{ section.settings.satisfied_number }}</span>
      <span>{{ section.settings.satisfied_suffix }}</span>
      <span class="trustpilot-banner__separator">•</span>
    </div>
    {% endif %}
    
    <div class="trustpilot-banner__rating">
      {% if section.settings.show_excellent %}
      <span class="trustpilot-banner__excellent">{{ section.settings.excellent_text }}</span>
      {% endif %}
      
      {% if section.settings.show_stars %}
      <div class="trustpilot-banner__stars">
        {% for i in (1..5) %}
          {% if i <= section.settings.star_count %}
          <svg viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
          {% else %}
          <svg viewBox="0 0 24 24" style="fill: rgba(255,255,255,0.3);">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
          {% endif %}
        {% endfor %}
      </div>
      {% endif %}
      
      <span><strong>{{ section.settings.rating_score }}</strong> sur <span class="trustpilot-banner__avis-number">{{ section.settings.review_count }}</span> {{ section.settings.review_text }}</span>
    </div>
  </div>
</div>

