<style>
  .image-expandable-section {
    margin: 40px 0;  /* Padding uniquement haut et bas */
    padding: 0;
  }
  
  .section-wrapper {
    padding: 0;  /* Suppression du padding gauche/droite */
  }
  
  .image-container {
    position: relative;
    width: 100%;
    min-height: 500px;
    overflow: hidden;
    border-radius: 0;  /* Suppression des coins arrondis */
  }
  
  .full-width-image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    min-height: 500px;
  }
  
  .text-box {
    position: absolute;
    bottom: 0;
    left: 0;
    background: white;
    padding: 10px 20px;
    box-shadow: 0 -2px 20px rgba(0,0,0,0.1);
    width: 90%;
  }
  
  .expandable-details summary {
    list-style: none;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 15px;
  }
  
  .expandable-details summary::-webkit-details-marker {
    display: none;
  }
  
  .title {
    margin: 0;
    font-size: 15px;
    font-weight: 700;
    color: #090909;
    line-height: 1.1;
    flex: 1;
  }
  
  .arrow-circle {
    flex-shrink: 0;
    width: 38px;
    height: 38px;
    border-radius: 50%;
    border: 2px solid #73e0ff;
    color: #73e0ff;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }
  
  .arrow-circle svg {
    transition: transform 0.3s ease;
  }
  
  .expandable-details[open] .arrow-circle {
    transform: rotate(90deg);
  }
  
  .expandable-content {
    margin-top: 12px;
    padding-top: 12px;
    border-top: 1px solid #e8e8e8;
    color: #555;
    line-height: 1.6;
    font-size: 14px;
    animation: slideDown 0.3s ease;
  }
  
  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .image-expandable-section {
      margin: 24px 0;  /* Moins d'espace sur mobile */
    }
    
    .section-wrapper {
      padding: 0;  /* Pas de padding sur mobile non plus */
    }
    
    .image-container {
      min-height: 400px;
    }
    
    .full-width-image {
      min-height: 400px;
    }
    
    .text-box {
      width: 85%;
      padding: 8px 16px;
    }
    
    .title {
      font-size: 14px;
    }
    
    .arrow-circle {
      width: 34px;
      height: 34px;
    }
    
    .expandable-details summary {
      gap: 12px;
    }
  }
</style>