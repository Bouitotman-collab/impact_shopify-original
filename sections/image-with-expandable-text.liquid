<div class="image-expandable-section-wrapper" style="background-color: {{ section.settings.spacing_color }}; padding-top: {% if section.settings.is_first_section %}{{ section.settings.spacing_top }}px{% else %}0px{% endif %}; padding-bottom: {{ section.settings.spacing_bottom }}px; padding-left: {{ section.settings.spacing_left }}px; padding-right: {{ section.settings.spacing_right }}px;">
  <div class="image-expandable-section {% if section.settings.separate_section_with_border %}bordered-section{% endif %}">
    <div class="section-wrapper">
      <div class="image-container">
        {%- if section.settings.image != blank -%}
          {{- section.settings.image | image_url: width: 2000 | image_tag: loading: 'lazy', sizes: '100vw', widths: '800,1200,1600,2000', class: 'full-width-image' -}}
        {%- else -%}
          {{- 'lifestyle-1' | placeholder_svg_tag: 'placeholder full-width-image' -}}
        {%- endif -%}
        
        <div class="text-box" style="background: {{ section.settings.box_background_color }};">
          <details class="expandable-details">
            <summary>
              <h2 class="title" style="color: #74D0F1;">{{ section.settings.title | default: "Notre histoire" }}</h2>
              
              <div class="arrow-circle" style="border-color: #74D0F1; color: #74D0F1;">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path d="M7.5 5L12.5 10L7.5 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            </summary>
            
            <div class="expandable-content" style="color: #74D0F1;">
              {{ section.settings.content }}
            </div>
          </details>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .image-expandable-section-wrapper {
    margin: 0 !important;
  }
  
  .image-expandable-section {
    margin: 0 !important;
    padding: 0 !important;
  }
  
  .section-wrapper {
    padding: 0 !important;
    margin: 0 !important;
  }
  
  .image-container {
    position: relative;
    width: 100%;
    min-height: 500px;
    overflow: hidden;
    margin: 0 !important;
  }
  
  .full-width-image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    min-height: 500px;
  }
  
  .text-box {
    position: absolute;
    bottom: 0;
    left: 0;
    padding: 10px 20px;
    box-shadow: 0 -2px 20px rgba(0,0,0,0.1);
    width: 90%;
  }
  
  .expandable-details summary {
    list-style: none;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 15px;
  }
  
  .expandable-details summary::-webkit-details-marker {
    display: none;
  }
  
  .title {
    margin: 0;
    font-size: 15px;
    font-weight: 700;
    line-height: 1.1;
    flex: 1;
  }
  
  .arrow-circle {
    flex-shrink: 0;
    width: 38px;
    height: 38px;
    border-radius: 50%;
    border: 2px solid;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }
  
  .arrow-circle svg {
    transition: transform 0.3s ease;
  }
  
  .expandable-details[open] .arrow-circle {
    transform: rotate(90deg);
  }
  
  .expandable-content {
    margin-top: 12px;
    padding-top: 12px;
    border-top: 1px solid rgba(0,0,0,0.1);
    line-height: 1.6;
    font-size: 14px;
    animation: slideDown 0.3s ease;
  }
  
  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .image-container {
      min-height: 400px;
    }
    
    .full-width-image {
      min-height: 400px;
    }
    
    .text-box {
      width: 85%;
      padding: 8px 16px;
    }
    
    .title {
      font-size: 14px;
    }
    
    .arrow-circle {
      width: 34px;
      height: 34px;
    }
    
    .expandable-details summary {
      gap: 12px;
    }
  }
</style>

{% schema %}
{
  "name": "Image + Lire plus",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "Vêtements tout confort : 10 conseils pour la lessive de bébé"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Contenu extensible",
      "default": "<p>Votre texte détaillé ici...</p>"
    },
    {
      "type": "header",
      "content": "Espacement (padding)"
    },
    {
      "type": "checkbox",
      "id": "is_first_section",
      "label": "Première section (avec padding-top)",
      "default": false,
      "info": "Cochez cette case uniquement pour la première section \"Image + Lire plus\" de votre page."
    },
    {
      "type": "range",
      "id": "spacing_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Espacement haut",
      "default": 15,
      "info": "S'applique uniquement si 'Première section' est cochée"
    },
    {
      "type": "range",
      "id": "spacing_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Espacement bas",
      "default": 15
    },
    {
      "type": "range",
      "id": "spacing_left",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Espacement gauche",
      "default": 0
    },
    {
      "type": "range",
      "id": "spacing_right",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Espacement droite",
      "default": 0
    },
    {
      "type": "color",
      "id": "spacing_color",
      "label": "Couleur de l'espacement",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Couleurs de la boîte"
    },
    {
      "type": "color",
      "id": "box_background_color",
      "label": "Couleur de fond de la boîte",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "separate_section_with_border",
      "label": "Séparer avec bordure",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Image + Lire plus"
    }
  ]
}
{% endschema %}