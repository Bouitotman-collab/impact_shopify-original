<style>
  .logo-carousel-section {
    padding: 40px 0;
    overflow: hidden;
  }

  .logo-carousel-wrapper {
    overflow: hidden;
    width: 100%;
  }

  .logo-carousel-track {
    display: flex;
    align-items: center;
    animation: scroll 12s linear infinite;
  }

  .logo-slide {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 80px;
    padding: 0 30px;
  }

  .logo-slide img {
    height: 80px;
    width: auto;
  }

  @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-1160px); }
  }

  .logo-carousel-wrapper:hover .logo-carousel-track {
    animation-play-state: paused;
  }

  @media screen and (max-width: 749px) {
    .logo-slide {
      height: 50px;
      padding: 0 15px;
    }

    .logo-slide img {
      height: 50px;
    }

    .logo-carousel-track {
      animation: scroll-mobile 8s linear infinite;
    }
  }

  @keyframes scroll-mobile {
    0% { transform: translateX(0); }
    100% { transform: translateX(-580px); }
  }
</style>

