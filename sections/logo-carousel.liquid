<style>
  .logo-carousel-section {
    overflow: hidden;
  }

  .logo-carousel-title {
    text-align: center;
    font-family: 'Epilogue', sans-serif;
    font-weight: 400;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-bottom: 25px;
  }

  .logo-carousel-wrapper {
    overflow: hidden;
    width: 100%;
  }

  .logo-carousel-track {
    display: flex;
    align-items: center;
    animation: scroll {{ section.settings.speed }}s linear infinite;
  }

  .logo-slide {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 50px; /* Changé de 30px à 50px */
  }

  .logo-slide img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .logo-carre {
    width: 80px;
    height: 80px;
  }

  .logo-rect {
    width: 160px;
    height: 80px;
  }

  @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-1400px); } /* Ajusté de -1160px à -1400px */
  }

  .logo-carousel-wrapper:hover .logo-carousel-track {
    animation-play-state: paused;
  }

  @media screen and (max-width: 749px) {
    .logo-slide {
      margin: 0 20px;
    }

    .logo-carre {
      width: 50px;
      height: 50px;
    }

    .logo-rect {
      width: 100px;
      height: 50px;
    }

    .logo-carousel-track {
      animation: scroll-mobile {{ section.settings.speed_mobile }}s linear infinite;
      -webkit-transform: translateZ(0);
      transform: translateZ(0);
      will-change: transform;
    }

    .logo-carousel-title {
      font-size: {{ section.settings.title_size | times: 0.8 }}px !important;
    }
  }

  @keyframes scroll-mobile {
    0% { transform: translate3d(0, 0, 0); }
    100% { transform: translate3d(-740px, 0, 0); }
  }
</style>
