            {% else %}
              <div class="logo-container"><img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}"></div>
            {% endif %}
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .logo-carousel-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: transparent;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .logo-carousel-title {
    text-align: center;
    font-family: 'Epilogue', sans-serif;
    font-size: {{ section.settings.title_size }}px;
    color: {{ section.settings.title_color }};
    margin-bottom: 25px;
    font-weight: 400;
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  .logo-carousel-wrapper {
    overflow: hidden;
    position: relative;
    width: 100%;
    display: flex;
    align-items: center;
  }

  .logo-carousel-track {
    display: flex;
    align-items: center;
    animation: scroll {{ section.settings.animation_speed }}s linear infinite;
  }

  .logo-carousel-slide {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-container {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-container img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    opacity: {{ section.settings.logo_opacity }};
    transition: opacity 0.3s ease;
  }

  .logo-container img:hover {
    opacity: 1;
  }

  .logo-container.logo-1 {
    width: 200px;
    height: 80px;
    margin: 0 25px;
  }

  .logo-container.logo-2 {
    width: 250px;
    height: 120px;
    margin: 0 25px;
  }

  .logo-container.logo-3 {
    width: 310px;
    height: 190px;
    margin: 0 25px;
  }

  .logo-container.logo-4 {
    width: 200px;
    height: 80px;
    margin: 0 25px;
  }

  .logo-container.logo-5 {
    width: 200px;
    height: 80px;
    margin: 0 25px;
  }

  .logo-container.logo-6 {
    width: 200px;
    height: 80px;
    margin: 0 25px;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-33.333%);
    }
  }

  .logo-carousel-wrapper:hover .logo-carousel-track {
    animation-play-state: paused;
  }

  @media screen and (max-width: 749px) {
    .logo-carousel-title {
      font-size: calc({{ section.settings.title_size }}px * 0.8);
    }

    .logo-container.logo-1 {
      width: 120px;
      height: 50px;
      margin: 0 15px;
    }

    .logo-container.logo-2 {
      width: 180px;
      height: 90px;
      margin: 0 -5px;
    }

    .logo-container.logo-3 {
      width: 220px;
      height: 140px;
      margin: 0 20px;
    }

    .logo-container.logo-4 {
      width: 120px;
      height: 50px;
      margin: 0 15px;
    }

    .logo-container.logo-5 {
      width: 120px;
      height: 50px;
      margin: 0 15px;
    }

    .logo-container.logo-6 {
      width: 120px;
      height: 50px;
      margin: 0 15px;
    }

    .logo-carousel-track {
      animation-duration: {{ section.settings.animation_speed | divided_by: 1.5 }}s;
    }
  }
</style>

{% schema %}
{
  "name": "Logo Carousel",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Afficher le titre",
      "default": true
    },
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "Vu dans"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Taille du titre (px)",
      "min": 12,
      "max": 24,
      "step": 1,
      "default": 14
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Couleur du titre",
      "default": "#666666"
    },
    {
      "type": "range",
      "id": "logo_opacity",
      "label": "Opacité des logos",
      "min": 0.3,
      "max": 1,
      "step": 0.1,
      "default": 1
    },
    {
      "type": "range",
      "id": "animation_speed",
      "label": "Vitesse de défilement (secondes)",
      "min": 10,
      "max": 60,
      "step": 2,
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Espacement haut (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Espacement bas (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Image du logo"
        },
        {
          "type": "text",
          "id": "logo_alt",
          "label": "Texte alternatif",
          "default": "Logo partenaire"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo Carousel",
      "blocks": []
    }
  ]
}
{% endschema %}