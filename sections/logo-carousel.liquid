{% comment %}
  Section: Logo Carousel - Barre de notoriété "Vu dans"
  Pour le thème Impact de Shopify
{% endcomment %}

<div class="logo-carousel-section">
  {% if section.settings.show_title %}
    <p class="logo-carousel-title">{{ section.settings.title }}</p>
  {% endif %}
  
  <div class="logo-carousel-wrapper">
    <div class="logo-carousel-track">
      <!-- Premier groupe de logos -->
      {% for block in section.blocks %}
        <div class="logo-carousel-slide" {{ block.shopify_attributes }}>
          {% if block.settings.logo != blank %}
            {% assign logo_url = block.settings.logo | image_url: width: 300 %}
            {% if logo_url contains 'D5B32CF4-B425-4A7B-9433-4504598FE777-Photoroom' %}
              <img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}" class="logo-photoroom">
            {% else %}
              <img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}">
            {% endif %}
          {% endif %}
        </div>
      {% endfor %}
      
      <!-- Duplication pour effet de boucle infinie -->
      {% for block in section.blocks %}
        <div class="logo-carousel-slide">
          {% if block.settings.logo != blank %}
            {% assign logo_url = block.settings.logo | image_url: width: 300 %}
            {% if logo_url contains 'D5B32CF4-B425-4A7B-9433-4504598FE777-Photoroom' %}
              <img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}" class="logo-photoroom">
            {% else %}
              <img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}">
            {% endif %}
          {% endif %}
        </div>
      {% endfor %}

      <!-- Troisième groupe pour éviter les trous -->
      {% for block in section.blocks %}
        <div class="logo-carousel-slide">
          {% if block.settings.logo != blank %}
            {% assign logo_url = block.settings.logo | image_url: width: 300 %}
            {% if logo_url contains 'D5B32CF4-B425-4A7B-9433-4504598FE777-Photoroom' %}
              <img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}" class="logo-photoroom">
            {% else %}
              <img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}">
            {% endif %}
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .logo-carousel-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: transparent;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .logo-carousel-title {
    text-align: center;
    font-family: 'Epilogue', sans-serif;
    font-size: {{ section.settings.title_size }}px;
    color: {{ section.settings.title_color }};
    margin-bottom: 25px;
    font-weight: 400;
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  .logo-carousel-wrapper {
    overflow: hidden;
    position: relative;
    width: 100%;
    display: flex;
    align-items: center;
  }

  .logo-carousel-track {
    display: flex;
    align-items: center;
    animation: scroll {{ section.settings.animation_speed }}s linear infinite;
  }

  .logo-carousel-slide {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 50px;
  }

  .logo-carousel-slide img {
    height: {{ section.settings.logo_height }}px;
    width: auto;
    max-width: {{ section.settings.logo_width }}px;
    object-fit: contain;
    opacity: {{ section.settings.logo_opacity }};
    transition: opacity 0.3s ease;
  }

  /* Style spécifique pour le logo Photoroom */
  .logo-carousel-slide img.logo-photoroom {
    height: 90px;
    max-width: 220px;
  }

  .logo-carousel-slide img:hover {
    opacity: 1;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-33.333%);
    }
  }

  /* Pause au survol */
  .logo-carousel-wrapper:hover .logo-carousel-track {
    animation-play-state: paused;
  }

  /* Responsive Mobile */
  @media screen and (max-width: 749px) {
    .logo-carousel-title {
      font-size: calc({{ section.settings.title_size }}px * 0.8);
    }
    
    .logo-carousel-slide img {
      height: calc({{ section.settings.logo_height }}px * 0.6);
      max-width: calc({{ section.settings.logo_width }}px * 0.6);
    }

    .logo-carousel-slide img.logo-photoroom {
      height: 60px;
      max-width: 150px;
    }
    
    .logo-carousel-slide {
      padding: 0 25px;
    }

    .logo-carousel-track {
      animation-duration: {{ section.settings.animation_speed | divided_by: 1.5 }}s;
    }
  }
</style>

{% schema %}
{
  "name": "Logo Carousel",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Afficher le titre",
      "default": true
    },
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "Vu dans"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Taille du titre (px)",
      "min": 12,
      "max": 24,
      "step": 1,
      "default": 14
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Couleur du titre",
      "default": "#666666"
    },
    {
      "type": "range",
      "id": "logo_height",
      "label": "Hauteur des logos (px)",
      "min": 30,
      "max": 150,
      "step": 5,
      "default": 70
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Largeur max des logos (px)",
      "min": 80,
      "max": 300,
      "step": 10,
      "default": 180
    },
    {
      "type": "range",
      "id": "logo_opacity",
      "label": "Opacité des logos",
      "min": 0.3,
      "max": 1,
      "step": 0.1,
      "default": 1
    },
    {
      "type": "range",
      "id": "animation_speed",
      "label": "Vitesse de défilement (secondes)",
      "min": 10,
      "max": 60,
      "step": 2,
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Espacement haut (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Espacement bas (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Image du logo"
        },
        {
          "type": "text",
          "id": "logo_alt",
          "label": "Texte alternatif",
          "default": "Logo partenaire"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo Carousel",
      "blocks": []
    }
  ]
}
{% endschema %}