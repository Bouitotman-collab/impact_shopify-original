<style>
  .logo-carousel-section {
    padding: 40px 0;
    overflow: hidden;
  }

  .logo-carousel-wrapper {
    overflow: hidden;
    width: 100%;
  }

  .logo-carousel-track {
    display: flex;
    align-items: center;
  }

  .logo-slide {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 30px;
  }

  .logo-slide img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .logo-carre {
    width: 80px;
    height: 80px;
  }

  .logo-rect {
    width: 160px;
    height: 80px;
  }

  .logo-carousel-wrapper:hover .logo-carousel-track {
    animation-play-state: paused;
  }

  @media screen and (max-width: 749px) {
    .logo-slide {
      margin: 0 20px;
    }

    .logo-carre {
      width: 50px;
      height: 50px;
    }

    .logo-rect {
      width: 100px;
      height: 50px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const track = document.getElementById('logoTrack');
    const slides = track.querySelectorAll('.logo-slide');
    const totalSlides = slides.length;
    const halfSlides = totalSlides / 2;
    
    let totalWidth = 0;
    for (let i = 0; i < halfSlides; i++) {
      const slide = slides[i];
      const style = window.getComputedStyle(slide);
      totalWidth += slide.offsetWidth + parseFloat(style.marginLeft) + parseFloat(style.marginRight);
    }
    
    const isMobile = window.innerWidth <= 749;
    const duration = isMobile ? 8 : 12;
    
    const styleSheet = document.createElement('style');
    styleSheet.textContent = `
      @keyframes scrollAuto {
        0% { transform: translateX(0); }
        100% { transform: translateX(-${totalWidth}px); }
      }
      .logo-carousel-track {
        animation: scrollAuto ${duration}s linear infinite;
      }
    `;
    document.head.appendChild(styleSheet);
  });
</script>

