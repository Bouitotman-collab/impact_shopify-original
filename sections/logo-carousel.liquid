<style>
  .logo-carousel-section {
    overflow: hidden;
  }

  .logo-carousel-title {
    text-align: center;
    
    font-weight: 400;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-bottom: 25px;
  }

  .logo-carousel-wrapper {
    overflow: hidden;
    width: 100%;
  }

  .logo-carousel-track {
    display: flex;
    align-items: center;
    animation: scroll {{ section.settings.speed }}s linear infinite;
  }

  .logo-slide {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 60px;
  }

  .logo-slide img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .logo-carre {
    width: 80px;
    height: 80px;
  }

  .logo-rect {
    width: 160px;
    height: 80px;
  }

  @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-1520px); }
  }

  .logo-carousel-wrapper:hover .logo-carousel-track {
    animation-play-state: paused;
  }

  @media screen and (max-width: 749px) {
    .logo-slide {
      margin: 0 20px;
    }

    .logo-carre {
      width: 50px;
      height: 50px;
    }

    .logo-rect {
      width: 100px;
      height: 50px;
    }

    .logo-carousel-track {
      animation: scroll-mobile {{ section.settings.speed_mobile }}s linear infinite;
      -webkit-transform: translateZ(0);
      transform: translateZ(0);
      will-change: transform;
    }

    .logo-carousel-title {
      font-size: {{ section.settings.title_size | times: 0.8 }}px !important;
    }
  }

  @keyframes scroll-mobile {
    0% { transform: translate3d(0, 0, 0); }
    100% { transform: translate3d(-740px, 0, 0); }
  }
</style>

{% schema %}
{
  "name": "Logo Carousel",
  "settings": [
    {
      "type": "header",
      "content": "Titre"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Afficher le titre",
      "default": false
    },
    {
      "type": "text",
      "id": "title_text",
      "label": "Texte du titre",
      "default": "Ils parlent de nous"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Taille du titre",
      "min": 12,
      "max": 32,
      "step": 2,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Couleur du titre",
      "default": "#333333"
    },
    {
      "type": "header",
      "content": "Apparence"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Couleur de fond",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Espacement"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Espacement haut",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Espacement bas",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Vitesse"
    },
    {
      "type": "range",
      "id": "speed",
      "label": "Vitesse desktop (secondes)",
      "min": 5,
      "max": 30,
      "step": 1,
      "default": 12,
      "unit": "s"
    },
    {
      "type": "range",
      "id": "speed_mobile",
      "label": "Vitesse mobile (secondes)",
      "min": 5,
      "max": 30,
      "step": 1,
      "default": 10,
      "unit": "s"
    }
  ],
  "presets": [
    {
      "name": "Logo Carousel"
    }
  ]
}
{% endschema %}
