{% comment %}
  Section: Logo Carousel - Barre de notoriété "Vu dans"
  Pour le thème Impact de Shopify
{% endcomment %}

<div class="logo-carousel-section">
  {% if section.settings.show_title %}
    <p class="logo-carousel-title">{{ section.settings.title }}</p>
  {% endif %}
  
  <div class="logo-carousel-wrapper">
    <div class="logo-carousel-track">
      <!-- Premier groupe de logos -->
      {% for block in section.blocks %}
        <div class="logo-carousel-slide" {{ block.shopify_attributes }}>
          {% if block.settings.logo != blank %}
            {% assign logo_url = block.settings.logo | image_url: width: 400 %}
            {% if logo_url contains 'Logo-ConsoMag-Photoroom' %}
              <div class="logo-container logo-1"><img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}"></div>
            {% elsif logo_url contains '8949AA69-DE9A-4BED-9C37-53A9CDD8E100-Photoroom' %}
              <div class="logo-container logo-2"><img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}"></div>
            {% elsif logo_url contains 'D5B32CF4-B425-4A7B-9433-4504598FE777-Photoroom' %}
              <div class="logo-container logo-3"><img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}"></div>
            {% elsif logo_url contains 'AACD3ED8-02C4-44A9-95FA-F1E9B396FFC1' %}
              <div class="logo-container logo-4"><img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}"></div>
            {% elsif logo_url contains 'Design_sans_titre-Photoroom-Photoroom' %}
              <div class="logo-container logo-5"><img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}"></div>
            {% elsif logo_url contains 'new-enhance-photo-v2-1_3_-Photoroom' %}
              <div class="logo-container logo-6"><img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}"></div>
            {% else %}
              <div class="logo-container"><img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}"></div>
            {% endif %}
          {% endif %}
        </div>
      {% endfor %}
      
      <!-- Duplication pour effet de boucle infinie -->
      {% for block in section.blocks %}
        <div class="logo-carousel-slide">
          {% if block.settings.logo != blank %}
            {% assign logo_url = block.settings.logo | image_url: width: 400 %}
            {% if logo_url contains 'Logo-ConsoMag-Photoroom' %}
              <div class="logo-container logo-1"><img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}"></div>
            {% elsif logo_url contains '8949AA69-DE9A-4BED-9C37-53A9CDD8E100-Photoroom' %}
              <div class="logo-container logo-2"><img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}"></div>
            {% elsif logo_url contains 'D5B32CF4-B425-4A7B-9433-4504598FE777-Photoroom' %}
              <div class="logo-container logo-3"><img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}"></div>
            {% elsif logo_url contains 'AACD3ED8-02C4-44A9-95FA-F1E9B396FFC1' %}
              <div class="logo-container logo-4"><img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}"></div>
            {% elsif logo_url contains 'Design_sans_titre-Photoroom-Photoroom' %}
              <div class="logo-container logo-5"><img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}"></div>
            {% elsif logo_url contains 'new-enhance-photo-v2-1_3_-Photoroom' %}
              <div class="logo-container logo-6"><img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}"></div>
            {% else %}
              <div class="logo-container"><img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}"></div>
            {% endif %}
          {% endif %}
        </div>
      {% endfor %}

      <!-- Troisième groupe pour éviter les trous -->
      {% for block in section.blocks %}
        <div class="logo-carousel-slide">
          {% if block.settings.logo != blank %}
            {% assign logo_url = block.settings.logo | image_url: width: 400 %}
            {% if logo_url contains 'Logo-ConsoMag-Photoroom' %}
              <div class="logo-container logo-1"><img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}"></div>
            {% elsif logo_url contains '8949AA69-DE9A-4BED-9C37-53A9CDD8E100-Photoroom' %}
              <div class="logo-container logo-2"><img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}"></div>
            {% elsif logo_url contains 'D5B32CF4-B425-4A7B-9433-4504598FE777-Photoroom' %}
              <div class="logo-container logo-3"><img src="{{ logo_url }}" alt="{{ block.settings.logo_alt | default: 'Logo partenaire' }}"></div>
            {% elsif logo_url contains 'AACD3ED8-02C4-44A9-95FA-F1E9B396FFC1' %}
