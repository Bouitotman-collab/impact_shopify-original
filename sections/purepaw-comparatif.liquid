{% comment %}
  Section personnalisée : Tableau comparatif PurePaw
  Avec contrôles de padding personnalisables
{% endcomment %}

<style>
  /* Section avec padding contrôlable */
  .purepaw-comparatif-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    padding-left: {{ section.settings.padding_left }}px;
    padding-right: {{ section.settings.padding_right }}px;
    margin: 0;
    background-color: transparent;
    width: 100%;
    overflow: hidden;
  }

  /* Conteneur de l'image */
  .purepaw-comparatif-wrapper-{{ section.id }} {
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
    padding: 0;
    line-height: 0; /* Supprime l'espace en bas de l'image */
    background-color: transparent;
  }

  /* Image responsive sans espace */
  .purepaw-comparatif-image-{{ section.id }} {
    width: 100%;
    height: auto;
    display: block;
    margin: 0;
    padding: 0;
    border: none;
  }

  /* Version mobile - padding réduit si nécessaire */
  @media (max-width: 768px) {
    .purepaw-comparatif-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      padding-left: {{ section.settings.padding_left_mobile }}px;
      padding-right: {{ section.settings.padding_right_mobile }}px;
    }
  }
</style>

<section class="purepaw-comparatif-section-{{ section.id }}">
  <div class="purepaw-comparatif-wrapper-{{ section.id }}">
    {% if section.settings.image != blank %}
      <img 
        src="{{ section.settings.image | image_url: width: 2000 }}"
        srcset="{{ section.settings.image | image_url: width: 600 }} 600w,
                {{ section.settings.image | image_url: width: 1200 }} 1200w,
                {{ section.settings.image | image_url: width: 2000 }} 2000w"
        sizes="100vw"
        alt="{{ section.settings.alt_text | default: 'Tableau comparatif PurePaw vs Autres' }}"
        class="purepaw-comparatif-image-{{ section.id }}"
        loading="lazy"
        width="2000"
        height="auto"
      >
    {% else %}
      <img 
        src="https://cdn.shopify.com/s/files/1/0978/1873/9035/files/Beige_Playful_Skincare_Key_Benefits_Instagram_Post_1.webp?v=1768171570"
        alt="Tableau comparatif PurePaw vs Autres"
        class="purepaw-comparatif-image-{{ section.id }}"
        loading="lazy"
      >
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "PurePaw Comparatif",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image du tableau comparatif",
      "info": "Image par défaut : tableau PurePaw vs Autres"
    },
    {
      "type": "text",
      "id": "alt_text",
      "label": "Texte alternatif de l'image",
      "default": "Tableau comparatif PurePaw vs Autres"
    },
    {
      "type": "header",
      "content": "Espacement Desktop"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Padding Haut",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Padding Bas",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_left",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Padding Gauche",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_right",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Padding Droite",
      "default": 0
    },
    {
      "type": "header",
      "content": "Espacement Mobile"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding Haut (Mobile)",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding Bas (Mobile)",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_left_mobile",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding Gauche (Mobile)",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_right_mobile",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding Droite (Mobile)",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "PurePaw Comparatif",
      "category": "Custom"
    }
  ]
}
{% endschema %}
