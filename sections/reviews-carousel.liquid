<style>
  .reviews-carousel-section {
    background-color: #ffffff;
    padding: 60px 0;
  }

  .reviews-carousel-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    display: grid;
    grid-template-columns: 1fr;
    gap: 30px;
  }

  /* Bloc bleu à gauche */
  .reviews-summary-box {
    background-color: #000C7D;
    border-radius: 12px;
    padding: 60px 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    min-height: 400px;
  }

  .reviews-summary-box h2 {
    font-family: 'Barlow', sans-serif;
    font-weight: 700;
    font-size: 48px;
    color: #FFFFFF;
    margin: 0 0 15px 0;
    line-height: 1.2;
  }

  .reviews-stars {
    font-size: 32px;
    color: #FFFFFF;
    margin-bottom: 30px;
    letter-spacing: 5px;
  }

  .reviews-rating {
    font-family: 'Barlow', sans-serif;
    font-size: 42px;
    font-weight: 700;
    color: #FFFFFF;
    margin: 0;
    line-height: 1.2;
  }

  .reviews-rating-text {
    font-family: 'Barlow', sans-serif;
    font-size: 42px;
    font-weight: 400;
    color: #FFFFFF;
    margin: 0 0 10px 0;
  }

  .reviews-count {
    font-family: 'Barlow', sans-serif;
    font-size: 24px;
    font-weight: 800;
    color: #FFFFFF;
    margin: 0 0 30px 0;
  }

  .reviews-link {
    font-family: 'Barlow', sans-serif;
    font-size: 18px;
    font-weight: 400;
    color: #FFFFFF;
    text-decoration: underline;
    cursor: pointer;
    transition: opacity 0.3s;
  }

  .reviews-link:hover {
    opacity: 0.8;
  }

  /* Carrousel d'avis */
  .reviews-carousel {
    position: relative;
    overflow: hidden;
  }

  .reviews-carousel-wrapper {
    display: flex;
    gap: 20px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 10px 0;
  }

  .reviews-carousel-wrapper::-webkit-scrollbar {
    display: none;
  }

  .review-card {
    min-width: 350px;
    max-width: 350px;
    background: #F5F5F5;
    border-radius: 12px;
    padding: 30px;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .review-card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .review-title {
    font-family: 'Barlow', sans-serif;
    font-weight: 700;
    font-size: 18px;
    color: #000000;
    margin: 0;
  }

  .review-stars-small {
    color: #FFD700;
    font-size: 16px;
  }

  .review-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 8px;
    margin: 10px 0;
  }

  .review-text {
    font-family: 'Barlow', sans-serif;
    font-size: 15px;
    line-height: 1.6;
    color: #333333;
    margin: 0;
  }

  .review-author {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-top: 10px;
  }

  .review-author-name {
    font-family: 'Barlow', sans-serif;
    font-weight: 600;
    font-size: 14px;
    color: #000000;
  }

  .review-verified {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 13px;
    color: #00A651;
  }

  /* Navigation arrows */
  .carousel-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 12, 125, 0.9);
    color: white;
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    z-index: 10;
    transition: background 0.3s;
  }

  .carousel-nav:hover {
    background: rgba(0, 12, 125, 1);
  }

  .carousel-nav-prev {
    left: 10px;
  }

  .carousel-nav-next {
    right: 10px;
  }

  /* Responsive */
  @media (min-width: 1000px) {
    .reviews-carousel-container {
      grid-template-columns: 400px 1fr;
      gap: 40px;
    }
  }

  @media (max-width: 768px) {
    .reviews-summary-box {
      padding: 40px 30px;
      min-height: auto;
    }

    .reviews-summary-box h2 {
      font-size: 36px;
    }

    .reviews-rating,
    .reviews-rating-text {
      font-size: 32px;
    }

    .review-card {
      min-width: 300px;
      max-width: 300px;
    }
  }
</style>

