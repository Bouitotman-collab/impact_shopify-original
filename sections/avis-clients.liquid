<div class="loox-style-reviews">
  <div class="reviews-container">
    
    {%- comment -%} Titre principal {%- endcomment -%}
    <h2 class="reviews-main-title">
      Découvrez <span class="highlight-text">les avis</span>
    </h2>

    {%- comment -%} En-tête avec note et filtres {%- endcomment -%}
    <div class="reviews-header-section">
      <div class="rating-summary">
        <div class="star-display">
          ★★★★★
        </div>
        <button class="reviews-count-btn">
          {{ section.blocks.size }} Avis <span class="arrow-down">▼</span>
        </button>
        <button class="filter-btn">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <line x1="2" y1="5" x2="18" y2="5" stroke="currentColor" stroke-width="2"/>
            <line x1="2" y1="10" x2="18" y2="10" stroke="currentColor" stroke-width="2"/>
            <line x1="2" y1="15" x2="18" y2="15" stroke="currentColor" stroke-width="2"/>
            <circle cx="6" cy="5" r="2" fill="currentColor"/>
            <circle cx="14" cy="10" r="2" fill="currentColor"/>
            <circle cx="10" cy="15" r="2" fill="currentColor"/>
          </svg>
        </button>
      </div>

      {%- comment -%} Statistiques détaillées {%- endcomment -%}
      <div class="rating-breakdown">
        <div class="average-score">
          <span class="star-icon-large">★</span>
          <span class="score-number">{{ section.settings.average_rating }}</span>
        </div>
        
        <div class="rating-bars">
          <div class="rating-bar-row">
            <span class="stars-label">★★★★★</span>
            <div class="progress-bar">
              <div class="progress-fill" style="width: {{ section.settings.five_star_percent }}%;"></div>
            </div>
            <span class="count">({{ section.settings.five_star_count }})</span>
          </div>
          <div class="rating-bar-row">
            <span class="stars-label">★★★★☆</span>
            <div class="progress-bar">
              <div class="progress-fill" style="width: {{ section.settings.four_star_percent }}%;"></div>
            </div>
            <span class="count">({{ section.settings.four_star_count }})</span>
          </div>
          <div class="rating-bar-row">
            <span class="stars-label">★★★☆☆</span>
            <div class="progress-bar">
              <div class="progress-fill" style="width: {{ section.settings.three_star_percent }}%;"></div>
            </div>
            <span class="count">({{ section.settings.three_star_count }})</span>
          </div>
          <div class="rating-bar-row">
            <span class="stars-label">★★☆☆☆</span>
            <div class="progress-bar">
              <div class="progress-fill" style="width: {{ section.settings.two_star_percent }}%;"></div>
            </div>
            <span class="count">({{ section.settings.two_star_count }})</span>
          </div>
          <div class="rating-bar-row">
            <span class="stars-label">★☆☆☆☆</span>
            <div class="progress-bar">
              <div class="progress-fill" style="width: {{ section.settings.one_star_percent }}%;"></div>
            </div>
            <span class="count">({{ section.settings.one_star_count }})</span>
          </div>
        </div>
      </div>
    </div>

    {%- comment -%} Filtres de tri {%- endcomment -%}
    <div class="sort-filters">
      <div class="filter-item active">En vedette</div>
      <div class="filter-item">Les plus récentes</div>
      <div class="filter-item">Les meilleures notes</div>
      <div class="filter-item">Les notes les plus basses</div>
    </div>

    {%- comment -%} Bouton Écrire un avis {%- endcomment -%}
    {%- if section.settings.show_write_button -%}
      <a href="{{ section.settings.write_review_link }}" class="write-review-btn">
        Écrire un avis
      </a>
    {%- endif -%}

    {%- comment -%} Liste des avis {%- endcomment -%}
    <div class="reviews-list">
      {%- for block in section.blocks -%}
        <div class="review-item" {{ block.shopify_attributes }}>
          <div class="review-content-left">
            <div class="reviewer-header">
              <div class="reviewer-name-row">
                <span class="reviewer-name">{{ block.settings.customer_name }}</span>
                {%- if block.settings.verified -%}
                  <span class="verified-badge">
                    <svg width="14" height="14" viewBox="0 0 14 14" fill="none">
                      <circle cx="7" cy="7" r="6.5" stroke="currentColor" stroke-width="1"/>
                      <path d="M4 7L6 9L10 5" stroke="currentColor" stroke-width="1.5" fill="none"/>
                    </svg>
                    Vérifié
                  </span>
                {%- endif -%}
              </div>
              <div class="review-date">{{ block.settings.review_date }}</div>
            </div>

            <div class="review-stars">
              {%- assign rating = block.settings.rating | times: 1 -%}
              {%- for i in (1..5) -%}
                {%- if i <= rating -%}
                  ★
                {%- else -%}
                  ☆
                {%- endif -%}
              {%- endfor -%}
            </div>

            <div class="review-text">
              {{ block.settings.review_text }}
            </div>
          </div>

          {%- if block.settings.customer_image != blank -%}
            <div class="review-image">
              <img src="{{ block.settings.customer_image | image_url: width: 200 }}" alt="{{ block.settings.customer_name }}">
            </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>

    {%- comment -%} Bouton Charger plus {%- endcomment -%}
    {%- if section.settings.show_load_more -%}
      <div class="load-more-container">
        <button class="load-more-btn">Charger plus d'avis</button>
      </div>
    {%- endif -%}

  </div>
</div>

<style>
  .loox-style-reviews {
    padding: 60px 0;
    background: #fff;
  }

  .reviews-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .reviews-main-title {
    font-size: 32px;
    font-weight: 400;
    text-align: center;
    margin-bottom: 40px;
  }

  .highlight-text {
    color: #00A651;
    font-weight: 600;
  }

  .reviews-header-section {
    margin-bottom: 30px;
  }

  .rating-summary {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 30px;
  }

  .star-display {
    font-size: 28px;
    color: #FFD700;
    letter-spacing: 2px;
  }

  .reviews-count-btn {
    background: none;
    border: none;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .arrow-down {
    font-size: 12px;
  }

  .filter-btn {
    background: none;
    border: 1px solid #ddd;
    padding: 8px 12px;
    border-radius: 4px;
    cursor: pointer;
    margin-left: auto;
  }

  .rating-breakdown {
    display: flex;
    gap: 30px;
    align-items: center;
    padding: 20px;
    background: #f9f9f9;
    border-radius: 8px;
  }

  .average-score {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .star-icon-large {
    font-size: 48px;
    color: #FFD700;
  }

  .score-number {
    font-size: 48px;
    font-weight: 700;
  }

  .rating-bars {
    flex: 1;
  }

  .rating-bar-row {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 8px;
  }

  .stars-label {
    color: #FFD700;
    font-size: 14px;
    width: 80px;
  }

  .progress-bar {
    flex: 1;
    height: 8px;
    background: #e0e0e0;
    border-radius: 4px;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: #FFD700;
    transition: width 0.3s;
  }

  .count {
    font-size: 14px;
    color: #666;
    width: 40px;
  }

  .sort-filters {
    display: flex;
    gap: 10px;
    margin-bottom: 20px;
    padding-bottom: 20px;
    border-bottom: 1px solid #e0e0e0;
  }

  .filter-item {
    padding: 8px 16px;
    border-radius: 20px;
    background: #f5f5f5;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.3s;
  }

  .filter-item.active {
    background: #000;
    color: #fff;
  }

  .filter-item:hover {
    background: #e0e0e0;
  }

  .write-review-btn {
    display: block;
    width: 100%;
    padding: 15px;
    background: #fff;
    border: 2px solid #000;
    text-align: center;
    font-weight: 600;
    font-size: 16px;
    border-radius: 8px;
    margin-bottom: 30px;
    text-decoration: none;
    color: #000;
    transition: all 0.3s;
  }

  .write-review-btn:hover {
    background: #000;
    color: #fff;
  }

  .reviews-list {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .review-item {
    display: flex;
    gap: 20px;
    padding: 20px;
    border: 1px solid #e0e0e0;
    border-radius: 12px;
  }

  .review-content-left {
    flex: 1;
  }

  .reviewer-header {
    margin-bottom: 10px;
  }

  .reviewer-name-row {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 5px;
  }

  .reviewer-name {
    font-weight: 700;
    font-size: 16px;
  }

  .verified-badge {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    font-size: 12px;
    color: #00A651;
  }

  .review-date {
    font-size: 13px;
    color: #999;
  }

  .review-stars {
    color: #FFD700;
    font-size: 18px;
    margin-bottom: 10px;
    letter-spacing: 2px;
  }

  .review-text {
    font-size: 15px;
    line-height: 1.6;
    color: #333;
  }

  .review-image {
    width: 150px;
    height: 150px;
    flex-shrink: 0;
    border-radius: 8px;
    overflow: hidden;
  }

  .review-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .load-more-container {
    text-align: center;
    margin-top: 40px;
  }

  .load-more-btn {
    padding: 12px 40px;
    background: #fff;
    border: 2px solid #000;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
  }

  .load-more-btn:hover {
    background: #000;
    color: #fff;
  }

  @media (max-width: 768px) {
    .reviews-main-title {
      font-size: 24px;
    }

    .rating-breakdown {
      flex-direction: column;
      align-items: flex-start;
    }

    .sort-filters {
      overflow-x: auto;
      flex-wrap: nowrap;
    }

    .review-item {
      flex-direction: column-reverse;
    }

    .review-image {
      width: 100%;
      height: 200px;
    }
  }
</style>

