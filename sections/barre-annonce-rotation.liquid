<style>
.announcement-bar-rotating {
  background: #305AD0;
  color: #FFFFFF;
  font-family: 'Epilogue', sans-serif;
  padding: 12px 20px;
  text-align: center;
  font-size: 14px;
  font-weight: 500;
  position: relative;
  overflow: hidden;
  min-height: 45px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.announcement-bar-rotating__messages {
  position: relative;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.announcement-bar-rotating__message {
  position: absolute;
  width: 100%;
  opacity: 0;
  transition: opacity 0.5s ease-in-out;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.announcement-bar-rotating__message.active {
  opacity: 1;
  position: relative;
}

.announcement-bar-rotating__icon {
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  flex-shrink: 0;
}

.announcement-bar-rotating__icon svg {
  width: 100%;
  height: 100%;
  fill: #FFFFFF;
}

.announcement-bar-rotating__text {
  display: inline-flex;
  align-items: center;
  gap: 12px;
  flex-wrap: wrap;
  justify-content: center;
}

.announcement-bar-rotating__code {
  font-weight: 700;
  background: rgba(255, 255, 255, 0.2);
  padding: 2px 8px;
  border-radius: 4px;
}

.announcement-bar-rotating__separator {
  color: rgba(255, 255, 255, 0.6);
  margin: 0 4px;
}

@media screen and (max-width: 749px) {
  .announcement-bar-rotating {
    font-size: 12px;
    padding: 10px 15px;
    min-height: 40px;
  }
  
  .announcement-bar-rotating__icon {
    width: 16px;
    height: 16px;
  }
  
  .announcement-bar-rotating__text {
    gap: 8px;
  }
}
</style>

