<style>
.announcement-bar-rotating {
  background: #305AD0 !important;
  color: #FFFFFF !important;
  font-family: 'Epilogue', sans-serif;
  padding: 12px 20px;
  text-align: center;
  font-size: 14px;
  font-weight: 500;
  position: relative;
  overflow: hidden;
  min-height: 45px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.announcement-bar-rotating * {
  color: #FFFFFF !important;
}

.announcement-bar-rotating__messages {
  position: relative;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.announcement-bar-rotating__message {
  position: absolute;
  width: 100%;
  opacity: 0;
  transition: opacity 0.5s ease-in-out;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.announcement-bar-rotating__message.active {
  opacity: 1;
  position: relative;
}

.announcement-bar-rotating__icon {
  width: 22px;
  height: 22px;
  display: inline-block;
  vertical-align: middle;
  flex-shrink: 0;
  filter: brightness(0) invert(1);
}

.announcement-bar-rotating__icon img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.announcement-bar-rotating__text {
  display: inline-flex;
  align-items: center;
  gap: 12px;
  flex-wrap: wrap;
  justify-content: center;
}

.announcement-bar-rotating__code {
  font-weight: 700 !important;
  background: rgba(255, 255, 255, 0.25);
  padding: 3px 10px;
  border-radius: 4px;
}

.announcement-bar-rotating__separator {
  margin: 0 4px;
  font-weight: 700;
}

@media screen and (max-width: 749px) {
  .announcement-bar-rotating {
    font-size: 12px;
    padding: 10px 15px;
    min-height: 40px;
  }
  
  .announcement-bar-rotating__icon {
    width: 18px;
    height: 18px;
  }
  
  .announcement-bar-rotating__text {
    gap: 8px;
  }
}
</style>

<div class="announcement-bar-rotating">
  <div class="announcement-bar-rotating__messages">
    <div class="announcement-bar-rotating__message active" data-message="1">
      <span class="announcement-bar-rotating__icon">
        <img src="https://cdn.shopify.com/s/files/1/[VOTRE-ID-BOUTIQUE]/files/cadeau.png" alt="Cadeau" loading="lazy">
      </span>
      <span class="announcement-bar-rotating__text">
        -10% sur votre 1ère commande avec le code <span class="announcement-bar-rotating__code">BIENVENUE10</span>
      </span>
    </div>

    <div class="announcement-bar-rotating__message" data-message="2">
      <span class="announcement-bar-rotating__text">
        <span style="display: inline-flex; align-items: center; gap: 5px;">
          <span class="announcement-bar-rotating__icon">
            <img src="https://cdn.shopify.com/s/files/1/[VOTRE-ID-BOUTIQUE]/files/livraison-gratuite.png" alt="Livraison" loading="lazy">
          </span>
          Livraison gratuite
        </span>
        <span class="announcement-bar-rotating__separator">•</span>
        <span style="display: inline-flex; align-items: center; gap: 5px;">
          <span class="announcement-bar-rotating__icon">
            <img src="https://cdn.shopify.com/s/files/1/[VOTRE-ID-BOUTIQUE]/files/rembourser.png" alt="Remboursé" loading="lazy">
          </span>
          Satisfait ou remboursé
        </span>
        <span class="announcement-bar-rotating__separator">•</span>
        <span style="display: inline-flex; align-items: center; gap: 5px;">
          <span class="announcement-bar-rotating__icon">
            <img src="https://cdn.shopify.com/s/files/1/[VOTRE-ID-BOUTIQUE]/files/paiement-securise.png" alt="Paiement" loading="lazy">
          </span>
          Paiement 100% sécurisé
        </span>
      </span>
    </div>

    <div class="announcement-bar-rotating__message" data-message="3">
      <span class="announcement-bar-rotating__icon">
        <img src="https://cdn.shopify.com/s/files/1/[VOTRE-ID-BOUTIQUE]/files/client-satisfait.png" alt="Client satisfait" loading="lazy">
      </span>
      <span class="announcement-bar-rotating__text">
        Plus de 800 personnes satisfaites
      </span>
    </div>
  </div>
</div>

<script>
(function() {
  const messages = document.querySelectorAll('.announcement-bar-rotating__message');
  let currentIndex = 0;

  function rotateMessages() {
    messages[currentIndex].classList.remove('active');
    currentIndex = (currentIndex + 1) % messages.length;
    messages[currentIndex].classList.add('active');
  }

  setInterval(rotateMessages, 4000);
})();
</script>

