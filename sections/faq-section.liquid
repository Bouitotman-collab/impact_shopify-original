{% comment %}
  Section FAQ avec accordéon - Design PurePaw
  Couleur principale: #74D0F1
{% endcomment %}

{%- render 'section-spacing-collapsing' -%}

<style>
  #shopify-section-{{ section.id }} {
    --faq-accent-color: #74D0F1;
    --faq-text-color: #000000;
    --faq-border-color: #e5e5e5;
  }

  #shopify-section-{{ section.id }} .faq-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  #shopify-section-{{ section.id }} .faq-title {
    font-family: 'Barlow', sans-serif;
    font-weight: 700;
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--faq-text-color);
  }

  @media screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} .faq-title {
      font-size: 2rem;
      margin-bottom: 2rem;
    }
  }

  #shopify-section-{{ section.id }} .faq-item {
    border-bottom: 1px solid var(--faq-border-color);
    margin-bottom: 0;
  }

  #shopify-section-{{ section.id }} .faq-question {
    width: 100%;
    padding: 1.5rem 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    font-family: 'Barlow', sans-serif;
    font-weight: 600;
    font-size: 1.1rem;
    color: var(--faq-text-color);
    transition: color 0.3s ease;
  }

  #shopify-section-{{ section.id }} .faq-question:hover {
    color: var(--faq-accent-color);
  }

  #shopify-section-{{ section.id }} .faq-question-text {
    flex: 1;
    padding-right: 1rem;
  }

  #shopify-section-{{ section.id }} .faq-icon {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background-color: var(--faq-accent-color);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    font-weight: 700;
    flex-shrink: 0;
    transition: transform 0.3s ease;
  }

  #shopify-section-{{ section.id }} .faq-item.active .faq-icon {
    transform: rotate(45deg);
  }

  #shopify-section-{{ section.id }} .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease;
  }

  #shopify-section-{{ section.id }} .faq-answer-content {
    padding: 0 0 1.5rem 0;
    font-family: 'Barlow', sans-serif;
    font-weight: 400;
    font-size: 1rem;
    line-height: 1.6;
    color: #666;
  }

  #shopify-section-{{ section.id }} .faq-item.active .faq-answer {
    max-height: 500px;
  }

  @media screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} .faq-container {
      padding: 0 1rem;
    }

    #shopify-section-{{ section.id }} .faq-question {
      font-size: 1rem;
      padding: 1.2rem 0;
    }

    #shopify-section-{{ section.id }} .faq-answer-content {
      font-size: 0.95rem;
    }
  }
</style>

<div {% render 'section-properties' %}>
  <div class="faq-container">
    <h2 class="faq-title">{{ section.settings.title }}</h2>
    
    <div class="faq-list">
      {%- for block in section.blocks -%}
        <div class="faq-item" data-faq-item>
          <button class="faq-question" aria-expanded="false">
            <span class="faq-question-text">{{ block.settings.question }}</span>
            <span class="faq-icon">+</span>
          </button>
          <div class="faq-answer">
            <div class="faq-answer-content">
              {{ block.settings.answer }}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<script>
  (function() {
    const faqItems = document.querySelectorAll('[data-faq-item]');
    
    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      const answer = item.querySelector('.faq-answer');
      
      question.addEventListener('click', () => {
        const isActive = item.classList.contains('active');
        
        // Fermer tous les autres items
        faqItems.forEach(otherItem => {
          if (otherItem !== item) {
            otherItem.classList.remove('active');
            otherItem.querySelector('.faq-question').setAttribute('aria-expanded', 'false');
          }
        });
        
        // Toggle l'item cliqué
        if (isActive) {
          item.classList.remove('active');
          question.setAttribute('aria-expanded', 'false');
        } else {
          item.classList.add('active');
          question.setAttribute('aria-expanded', 'true');
        }
      });
    });
  })();
</script>

