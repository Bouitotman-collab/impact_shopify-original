    </label>

  </div>

  <button type="button" class="bundle-add-to-cart" id="bundle-add-to-cart">
    Ajouter au panier
  </button>
</div>

<style>
/* ===== BUNDLE CONTAINER ===== */
.product-bundle {
  max-width: 600px;
  margin: 40px auto;
  padding: 0 20px;
}

.bundle-header {
  text-align: center;
  margin-bottom: 30px;
}

.bundle-title {
  font-family: 'Barlow', sans-serif;
  font-size: 28px;
  font-weight: 700;
  color: #000;
  margin: 0 0 8px 0;
}

.bundle-subtitle {
  font-family: 'Barlow', sans-serif;
  font-size: 16px;
  color: #666;
  margin: 0;
}

/* ===== OPTIONS ===== */
.bundle-options {
  display: flex;
  flex-direction: column;
  gap: 16px;
  margin-bottom: 24px;
}

.bundle-option {
  position: relative;
  display: block;
  border: 2px solid #E0E0E0;
  border-radius: 12px;
  padding: 20px;
  cursor: pointer;
  transition: all 0.3s ease;
  background: white;
}

.bundle-option:hover {
  border-color: #74D0F1;
  box-shadow: 0 4px 12px rgba(116, 208, 241, 0.15);
}

.bundle-option input[type="radio"] {
  position: absolute;
  opacity: 0;
  pointer-events: none;
}

.bundle-option input[type="radio"]:checked ~ .option-content {
  opacity: 1;
}

.bundle-option input[type="radio"]:checked {
  & ~ .option-content {
    opacity: 1;
  }
  
  + .option-content::before {
    content: '‚úì';
    position: absolute;
    top: 20px;
    right: 20px;
    width: 28px;
    height: 28px;
    background: #74D0F1;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 16px;
  }
}

.bundle-option input[type="radio"]:checked ~ .option-content {
  border-color: #74D0F1;
}

/* Option populaire */
.bundle-option--popular {
  border: 3px solid #74D0F1;
  background: linear-gradient(to bottom, rgba(116, 208, 241, 0.05), white);
  box-shadow: 0 4px 16px rgba(116, 208, 241, 0.2);
}

.option-content {
  position: relative;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.option-header {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.option-badge {
  display: inline-block;
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.badge-solo {
  background: #F5F5F5;
  color: #666;
}

.badge-popular {
  background: #FFD700;
  color: #000;
}

.badge-save {
  background: #00A651;
  color: white;
}

.badge-famille {
  background: #74D0F1;
  color: white;
}

.badge-best {
  background: #FF6B35;
  color: white;
}

.option-details {
  margin-right: 40px;
}

.option-title {
  font-family: 'Barlow', sans-serif;
  font-size: 20px;
  font-weight: 700;
  color: #000;
  margin: 0 0 4px 0;
}

.option-description {
  font-family: 'Barlow', sans-serif;
  font-size: 14px;
  color: #666;
  margin: 0;
}

.option-pricing {
  display: flex;
  align-items: center;
  gap: 12px;
}

.option-price {
  font-family: 'Barlow', sans-serif;
  font-size: 32px;
  font-weight: 700;
  color: #74D0F1;
}

.option-price-compare {
  font-family: 'Barlow', sans-serif;
  font-size: 20px;
  color: #999;
  text-decoration: line-through;
}

.option-savings {
  font-family: 'Barlow', sans-serif;
  font-size: 14px;
  font-weight: 600;
  color: #00A651;
  padding: 6px 12px;
  background: rgba(0, 166, 81, 0.1);
  border-radius: 6px;
  display: inline-block;
}

/* ===== BOUTON AJOUTER AU PANIER ===== */
.bundle-add-to-cart {
  width: 100%;
  background: #74D0F1;
  color: white;
  border: none;
  border-radius: 8px;
  padding: 18px 32px;
  font-family: 'Barlow', sans-serif;
  font-size: 18px;
  font-weight: 700;
  text-transform: uppercase;
  cursor: pointer;
  transition: all 0.3s ease;
  letter-spacing: 0.5px;
}

.bundle-add-to-cart:hover {
  background: #5CBAD9;
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(116, 208, 241, 0.3);
}

.bundle-add-to-cart:active {
  transform: translateY(0);
}

/* ===== RESPONSIVE ===== */
@media (max-width: 768px) {
  .bundle-title {
    font-size: 24px;
  }
  
  .bundle-subtitle {
    font-size: 14px;
  }
  
  .bundle-option {
    padding: 16px;
  }
  
  .option-title {
    font-size: 18px;
  }
  
  .option-price {
    font-size: 28px;
  }
  
  .option-price-compare {
    font-size: 18px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const addToCartBtn = document.getElementById('bundle-add-to-cart');
  
  if (addToCartBtn) {
    addToCartBtn.addEventListener('click', async () => {
      const selectedOption = document.querySelector('input[name="bundle-choice"]:checked');
      
      if (!selectedOption) {
        alert('Veuillez s√©lectionner un pack');
        return;
      }
      
      const variantId = selectedOption.dataset.variantId;
      const quantity = parseInt(selectedOption.dataset.quantity);
      
      // D√©sactiver le bouton pendant l'ajout
      addToCartBtn.disabled = true;
      addToCartBtn.textContent = 'Ajout en cours...';
      
      try {
        const response = await fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            id: variantId,
            quantity: quantity
          })
        });
        
        if (response.ok) {
          // Rediriger vers le panier
          window.location.href = '/cart';
        } else {
          throw new Error('Erreur lors de l\'ajout au panier');
        }
      } catch (error) {
        console.error('Erreur:', error);
        alert('Une erreur est survenue. Veuillez r√©essayer.');
      } finally {
        addToCartBtn.disabled = false;
        addToCartBtn.textContent = 'Ajouter au panier';
      }
    });
  }
});
</script>

