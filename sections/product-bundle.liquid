    <label class="bundle-option bundle-option--popular" for="pack-duo">
      <input type="radio" name="bundle-choice" id="pack-duo" value="duo" data-variant-id="{{ product.variants[0].id }}" data-quantity="2" checked>
      
      <div class="option-content">
        <div class="option-header">
          <span class="option-badge badge-popular">‚≠ê Le plus populaire</span>
