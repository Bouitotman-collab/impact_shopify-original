    {%- comment -%} PACK FAMILLE {%- endcomment -%}
    <label class="bundle-option" for="pack-famille">
      <input type="radio" name="bundle-choice" id="pack-famille" value="famille" data-variant-id="{{ product.variants[0].id }}" data-quantity="3">
      
      <div class="option-content">
        <div class="option-header">
          <span class="option-badge badge-famille">Pack Famille</span>
          <span class="option-badge badge-best">Meilleure offre</span>
